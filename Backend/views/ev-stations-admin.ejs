<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage EV Stations</title>
    <link rel="stylesheet" href="/css/ev-stations-admin.css">
</head>
<body>
    <header>
        <h1>Manage EV Stations</h1>
        <a href="/admin/dashboard" class="back-btn">Back to Dashboard</a>
    </header>
    <main>
        <section>
            <h2>Existing EV Stations</h2>
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Website</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% evStations.forEach(station => { %>
                        <tr>
                            <td><%= station.id %></td>
                            <td><%= station.name %></td>
                            <td><%= station.contact %></td>
                            <td><%= station.address %></td>
                            <td><a href="<%= station.website %>" target="_blank"><%= station.website %></a></td>
                            <td><%= station.type %></td>
                            <td>
                                <form action="/admin/ev-stations/delete/<%= station.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>

        <section>
            <h2>Add New EV Station</h2>
            <form action="/admin/ev-stations/add" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" required>
                </div>
                <div class="form-group">
                    <label for="time">Operating Hours:</label>
                    <input type="text" id="time" name="time" required>
                </div>
                <div class="form-group">
                    <label for="contact">Contact:</label>
                    <input type="text" id="contact" name="contact" required>
                </div>
                <div class="form-group">
                    <label for="latitude">Latitude:</label>
                    <input type="text" id="latitude" name="latitude" required>
                </div>
                <div class="form-group">
                    <label for="longitude">Longitude:</label>
                    <input type="text" id="longitude" name="longitude" required>
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" required>
                </div>
                <div class="form-group">
                    <label for="website">Website:</label>
                    <input type="text" id="website" name="website" required>
                </div>
                <div class="form-group">
                    <label for="type">Type:</label>
                    <input type="text" id="type" name="type" required>
                </div>
                <button type="submit" class="add-btn">Add Station</button>
            </form>
        </section>
    </main>
</body>
</html>