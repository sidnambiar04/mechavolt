<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MechaVolt</title>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="icon" href="images/icon.png" type="image/png">
    
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="/images/icon.png" alt="MechaVolt Logo">
            </div>
            <ul class="nav-links">
                <li><a href="/home">Home</a></li>
                <% if (user) { %>
                    <li><a href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Login/Register</a></li>
                <% } %>
                <li><a href="/services">Services</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contacts">Contact</a></li>
            </ul>
            <div class="mobile-toggle" onclick="toggleMenu()">â‰¡</div>
        </nav>
    </header>
    <div class="main-content container">
        <div class="left-content">
            <div class="image-container">
                <img src="/images/VEHICLE -Photoroom.png" alt="EV Charging Services" class="animated-image">
            </div>
            <button class="cta-button" onclick="window.location.href='/services';">Find Services Now!</button>
        </div>
        
        <div class="right-content">
            <h1>Drive worry-free! Get real-time updates about the nearest charging and mechanical services.</h1>
            <h3>You are just a click away from finding solution to your Vehicle Problems.</h3>
            <h3>Need an EV charging station or stuck in Emergency Breakdown?</h3>
        </div>
    </div>
    <h2 class="gazzle">Let's gazzle upon some stats</h2>
    <div class="stats-container">
        <div class="charts-grid">
            <canvas id="evChargingRates"></canvas>
            <canvas id="petrolRates"></canvas>
            <canvas id="dieselRates"></canvas>
            <canvas id="cngRates"></canvas>
        </div>
    </div>

    <div id="chatbot-container">
        <button id="chatbot-button" onclick="toggleChatbot()">ðŸ’¬</button>
        <div id="chatbot-iframe-container">
            <iframe
                id="chatbot-iframe"
                src="https://www.chatbase.co/chatbot-iframe/m9O_0DISZ33RwcTzoWqZk"
                frameborder="0"
                allow="microphone"
            ></iframe>
        </div>
    </div>

    <footer id="contact">
        <div class="footer-content">
            <div class="footer-section">
                <h3>About MechaVolt</h3>
                <p>At MechaVolt, we provide top-quality vehicle services with a commitment to excellence and customer satisfaction.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <a href="/home">Home</a>
                <a href="/services">Services</a>
                <a href="/about">About Us</a>
                <a href="/appointment">Book Appointment</a>
            </div>
            <div class="footer-section">
                <h3>Contact Us</h3>
                <p>Pillai College Of Engineering, New Panvel</p>
                <p>Phone: +91 7506032398</p>
                <p>Email: info@mechavolt.com</p>
                <div class="social-links">
                    <a href="#"><span>FB</span></a>
                    <a href="#"><span>TW</span></a>
                    <a href="#"><span>IG</span></a>
                </div>
            </div>
        </div>
        <div class="copyright">
            <p>&copy; 2025 MechaVolt. All Rights Reserved.</p>
        </div>
    </footer>

    <script>
        function toggleMenu() {
            const navLinks = document.querySelector('.nav-links');
            navLinks.classList.toggle('active');
        }
        const years = [2018, 2019, 2020, 2021, 2022, 2023];
        
        const evChargingData = [5, 5.5, 6, 6.5, 7, 7.5];
        const petrolData = [75, 80, 85, 90, 100, 105];
        const dieselData = [65, 70, 75, 80, 90, 95];
        const cngData = [40, 42, 45, 50, 55, 60];
        
        function createChart(canvasId, label, data, color) {
            const ctx = document.getElementById(canvasId).getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: years,
                    datasets: [{
                        label: label,
                        data: data,
                        borderColor: color,
                        backgroundColor: color + '33',
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: true }
                    }
                }
            });
        }

        function toggleChatbot() {
        const iframeContainer = document.getElementById('chatbot-iframe-container');
        if (iframeContainer.style.display === 'none' || iframeContainer.style.display === '') {
            iframeContainer.style.display = 'block';
        } else {
            iframeContainer.style.display = 'none';
        }
        }
        
        createChart('evChargingRates', 'EV Charging Rates (â‚¹/kWh)', evChargingData, 'blue');
        createChart('petrolRates', 'Petrol Prices (â‚¹/L)', petrolData, 'red');
        createChart('dieselRates', 'Diesel Prices (â‚¹/L)', dieselData, 'green');
        createChart('cngRates', 'CNG Prices (â‚¹/kg)', cngData, 'orange');
    </script>
</body>
</html>