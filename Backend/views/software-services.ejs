<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Software Support and Updates</title>
    <link rel="stylesheet" href="/css/software-services.css"> <!-- Link to the CSS file -->
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <img src="/images/icon.png" alt="MechaVolt Logo">
            </div>
            <ul class="nav-links">
                <li><a href="/home">Home</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contacts">Contact</a></li>
            </ul>
        </nav>
        <h1>Software Support and Updates</h1>
    </header>

    <main>
        <section class="software-services-list">
            <h2>Our Software Services</h2>
            <div class="services-grid">
                <% softwareServices.forEach((service) => { %>
                    <div class="service-card">
                        <div class="service-img">
                            <img src="<%= service.image %>" alt="<%= service.name %>">
                        </div>
                        <div class="service-content">
                            <h3><%= service.name %></h3>
                            <p><strong>Estimated Amount:</strong> <%= service.estimated_amount %></p>
                            <a href="/software-services/<%= service.id %>" class="details-btn">Learn More</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
</body>
</html>