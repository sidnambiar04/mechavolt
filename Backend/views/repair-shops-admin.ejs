<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - <%= serviceName %></title>
    <link rel="stylesheet" href="/css/repair-shops-admin.css"> <!-- Add your admin CSS file -->
</head>
<body>
    <header>
        <h1>Admin Dashboard - <%= serviceName %></h1>
        <a href="/admin/dashboard">Back to Dashboard</a>
    </header>

    <main>
        <section class="repair-shops-list">
            <h2>Repair Shops</h2>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Address</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% repairShops.forEach(shop => { %>
                        <tr>
                            <td><%= shop.name %></td>
                            <td><%= shop.contact %></td>
                            <td><%= shop.address %></td>
                            <td><%= shop.time %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </main>
</body>
</html>