<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f2f5;
            height: 100vh;
            display: flex;
            overflow: hidden;
        }

        .slideshow-container {
            width: 60%;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            background-color: #2d2f2df0;
        }

        .slideshow-wrapper {
            position: relative;
            width: 100%;
            max-width: 800px;
            aspect-ratio: 10 / 8;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

        .slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .slide.active {
            opacity: 1;
        }

        /* Register Container with 40% width */
        .register-wrapper {
            width: 40%;
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 2rem;
            box-shadow: -5px 0 15px rgba(0,0,0,0.1);
        }

        .register-container {
            width: 100%;
            max-width: 350px;
            margin: 0 auto;
        }

        .register-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .register-header h2 {
            color: #333;
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .register-header p {
            color: #777;
            font-size: 0.9rem;
        }

        .input-group {
            margin-bottom: 1rem;
            position: relative;
        }

        .input-group input,
        .input-group select {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            outline: none;
            transition: all 0.3s ease;
        }

        .input-group input:focus,
        .input-group select:focus {
            border-color: #006400;
            box-shadow: 0 0 10px rgba(108, 99, 255, 0.1);
        }

        .input-group label {
            position: absolute;
            top: -8px;
            left: 12px;
            background-color: white;
            padding: 0 5px;
            font-size: 0.8rem;
            color: #006400;
            transition: all 0.3s ease;
        }

        .btn {
            width: 100%;
            padding: 0.75rem;
            background-color: white;
            color: #228b22;
            font-size: 20px;
            border: 3px solid #006400;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

        .btn:hover {
            background-color: #45a049;
            color: aliceblue;
            transform: translateY(-3px);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
        }

        .btn:active {
            transform: translateY(1px);
            box-shadow: 0 2px 4px rgba(8, 213, 12, 0.866);
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                90deg,
                 rgba(255, 255, 255, 0) 0%,
                 rgba(255, 255, 255, 0.3) 50%,
                 rgba(255, 255, 255, 0) 100%
            );
            transition: left 0.7s ease;
        }

        .btn:hover::before {
            left: 100%;
        }

        .login-link {
            text-align: center;
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #777;
        }

        .login-link a {
            color: #247e44;
            text-decoration: none;
            font-weight: bold;
        }

        .login-link a:hover {
            text-decoration: underline;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .slideshow-container, 
            .register-wrapper {
                width: 100%;
                max-width: 100%;
            }

            .slideshow-wrapper {
                aspect-ratio: 16 / 9;
            }
        }
    </style>
</head>
<body>
    <div class="slideshow-container">
        <div class="slideshow-wrapper">
            <img src="./img/ev station.jpg" alt="Slide 1" class="slide active">
            <img src="./img/car mechanic.jpg" alt="Slide 2" class="slide">
            <img src="./img/workshop.jpg" alt="Slide 3" class="slide">
            <img src="./img/ev station 3.jpg" alt="Slide 4" class="slide">
            <img src="./img/ev station 2.jpg" alt="Slide 5" class="slide">
        </div>
    </div>

    <div class="register-wrapper">
        <div class="register-container">
            <div class="register-header">
                <h2>Create Account</h2>
                <p>Sign up to get started</p>
            </div>
            <form action="/register" method="POST">
                <div class="input-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="input-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="input-group">
                    <label for="userType">User Type</label>
                    <select id="userType" name="userType" required>
                        <option value="">Select User Type</option>
                        <option value="driver">Driver</option>
                        <option value="serviceProvider">Service Provider</option>
                    </select>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="input-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                </div>
                <button type="submit" class="btn">Register</button>
                <p class="login-link">Already have an account? <a href="./login.html">Login</a></p>
            </form>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('.slide');
        let currentSlideIndex = 0;

        function changeSlide() {
            // Remove active class from current slide
            slides[currentSlideIndex].classList.remove('active');

            // Move to next slide
            currentSlideIndex = (currentSlideIndex + 1) % slides.length;

            // Add active class to new slide
            slides[currentSlideIndex].classList.add('active');
        }

        // Automatically change slide every 4 seconds
        setInterval(changeSlide, 4000);
    </script>
</body>
</html>